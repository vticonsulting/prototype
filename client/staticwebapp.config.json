{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "*.{css,scss,js,png,gif,ico,jpg,svg}"
    ]
  },
  "routes": [
    {
        "route": "/login",
        "redirect": "/.auth/login/aad"
    },
    {
      "route": "/index",
      "allowedRoles": ["anonymous"]
    },
    {
        "route": "/*",
        "allowedRoles": [
          "contributor"
        ]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    },
    "403": {
      "rewrite": "/custom-forbidden-page.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}
